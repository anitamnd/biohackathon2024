                  </mml:msub>
                </mml:mrow>
                <mml:mo>×</mml:mo>
                <mml:mstyle displaystyle="true">
                  <mml:mfrac>
                    <mml:mrow>
                      <mml:mi>m</mml:mi>
                      <mml:mo>⁢</mml:mo>
                      <mml:mi>e</mml:mi>
                      <mml:mo>⁢</mml:mo>
                      <mml:mi>a</mml:mi>
                      <mml:mo>⁢</mml:mo>
                      <mml:mi>n</mml:mi>
                      <mml:mo>⁢</mml:mo>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mo stretchy="false">(</mml:mo>
                          <mml:mi>i</mml:mi>
                          <mml:mo stretchy="false">)</mml:mo>
                        </mml:mrow>
                        <mml:mrow>
                          <mml:mi>o</mml:mi>
                          <mml:mo>⁢</mml:mo>
                          <mml:mi>v</mml:mi>
                          <mml:mo>⁢</mml:mo>
                          <mml:mi>e</mml:mi>
                          <mml:mo>⁢</mml:mo>
                          <mml:mi>r</mml:mi>
                          <mml:mo>⁢</mml:mo>
                          <mml:mi>l</mml:mi>
                          <mml:mo>⁢</mml:mo>
                          <mml:mi>a</mml:mi>
                          <mml:mo>⁢</mml:mo>
