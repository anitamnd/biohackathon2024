              </mml:mtd>
            </mml:mtr>
            <mml:mtr>
              <mml:mtd>
                <mml:mrow>
                  <mml:msub>
                    <mml:mrow>
                      <mml:mo>γ</mml:mo>
                    </mml:mrow>
                    <mml:mi>l</mml:mi>
                  </mml:msub>
                </mml:mrow>
                <mml:mo>∼</mml:mo>
                <mml:mtext>Multinomial</mml:mtext>
