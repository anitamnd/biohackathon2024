                </mml:mrow>
                <mml:mrow>
                  <mml:mrow>
                    <mml:msub>
                      <mml:mrow>
                        <mml:mi mathvariant="bold-italic">b</mml:mi>
                      </mml:mrow>
                      <mml:mi>l</mml:mi>
                    </mml:msub>
                  </mml:mrow>
                </mml:mrow>
                <mml:mo>,</mml:mo>
