                  <mml:mtr>
                    <mml:mtd>
                      <mml:mi mathvariant="bold-italic">D</mml:mi>
                      <mml:mo>(</mml:mo>
                      <mml:mi>j</mml:mi>
                      <mml:mo>,</mml:mo>
                      <mml:mi>k</mml:mi>
                      <mml:mo>)</mml:mo>
                      <mml:mo>|</mml:mo>
