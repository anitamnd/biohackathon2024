                      </mml:mtd>
                      <mml:mtd>
                        <mml:mspace width="1em"/>
                        <mml:msub>
                          <mml:mrow>
                            <mml:mi>ψ</mml:mi>
                          </mml:mrow>
                          <mml:mrow>
                            <mml:mn mathvariant="bold">2</mml:mn>
