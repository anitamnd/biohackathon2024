                                  <mml:mi>λ</mml:mi>
                                  <mml:mn>2</mml:mn>
                                </mml:msup>
                                <mml:mo>+</mml:mo>
                                <mml:mo> </mml:mo>
                                <mml:msup>
                                  <mml:mi>β</mml:mi>
                                  <mml:mn>2</mml:mn>
                                </mml:msup>
                              </mml:mrow>
                              <mml:mo>)</mml:mo>
                            </mml:mrow>
                            <mml:mo stretchy="false">/</mml:mo>
                            <mml:mn>2</mml:mn>
                          </mml:mrow>
                          <mml:mrow>
                            <mml:mi>a</mml:mi>
                            <mml:mo>−</mml:mo>
                            <mml:mn>1</mml:mn>
                          </mml:mrow>
                        </mml:mfrac>
                        <mml:mo>,</mml:mo>
                        <mml:mo> </mml:mo>
                        <mml:mi>i</mml:mi>
                        <mml:mi>f</mml:mi>
                        <mml:mi>λ</mml:mi>
                        <mml:mo>≤</mml:mo>
                        <mml:mrow>
                          <mml:mo>|</mml:mo>
