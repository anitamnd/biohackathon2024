                        <mml:mo> </mml:mo>
                        <mml:mo> </mml:mo>
                        <mml:mo> </mml:mo>
                        <mml:mi>i</mml:mi>
                        <mml:mi>f</mml:mi>
                        <mml:mrow>
                          <mml:mo>|</mml:mo>
