                          </mml:mrow>
                          <mml:mn>2</mml:mn>
                        </mml:mfrac>
                        <mml:mo>,</mml:mo>
                        <mml:mo> </mml:mo>
                        <mml:mo> </mml:mo>
                        <mml:mo> </mml:mo>
