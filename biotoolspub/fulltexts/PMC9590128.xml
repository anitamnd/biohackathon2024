      <p id="Par31">
        <bold>Code 2</bold>
      </p>
      <p id="Par32">
        <bold>relate2GeneDisease(SNPdata, species = c("Homo sapiens", "Mus musculus"), category = c("H", "C1", "C2", "C3", "C4", "C5", "C6", "C7", "C8"))</bold>
