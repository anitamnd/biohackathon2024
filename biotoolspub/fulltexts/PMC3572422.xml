                                  <mml:mspace width="2em"/>
                                  <mml:mspace width="2em"/>
                                  <mml:mspace width="2em"/>
                                </mml:mtd>
                                <mml:mtd>
                                  <mml:mspace width="1em"/>
                                  <mml:mtext>if</mml:mtext>
                                  <mml:mspace width="1em"/>
                                  <mml:msub>
                                    <mml:mrow>
                                      <mml:mover accent="true">
                                        <mml:mrow>
                                          <mml:mi mathvariant="script">D</mml:mi>
                                        </mml:mrow>
                                        <mml:mo>^</mml:mo>
