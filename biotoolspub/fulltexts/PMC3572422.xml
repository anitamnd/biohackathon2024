                    <mml:mo>=</mml:mo>
                    <mml:mfrac>
                      <mml:mrow>
                        <mml:mo>(</mml:mo>
                        <mml:mi>M</mml:mi>
                        <mml:mo>+</mml:mo>
                        <mml:mn>1</mml:mn>
                        <mml:mo>)</mml:mo>
                        <mml:mfenced open="(" close=")">
                          <mml:mfrac linethickness="0">
                            <mml:mrow>
                              <mml:mi>L</mml:mi>
                              <mml:mo>â</mml:mo>
                              <mml:mi>K</mml:mi>
                            </mml:mrow>
                            <mml:mrow>
                              <mml:mi>M</mml:mi>
                            </mml:mrow>
                          </mml:mfrac>
                        </mml:mfenced>
                      </mml:mrow>
                      <mml:mrow>
                        <mml:mfenced open="(" close=")">
                          <mml:mfrac linethickness="0">
                            <mml:mrow>
                              <mml:mi>L</mml:mi>
                            </mml:mrow>
                            <mml:mrow>
                              <mml:mi>M</mml:mi>
