                                  <mml:mspace width="2em"/>
                                  <mml:mspace width="2em"/>
                                  <mml:mspace width="0.3em"/>
                                  <mml:mspace width="0.3em"/>
                                </mml:mtd>
                              </mml:mtr>
                            </mml:mtable>
                          </mml:mrow>
                        </mml:mfenced>
                      </mml:mtd>
                    </mml:mtr>
                  </mml:mtable>
