                                      <mml:mi>i</mml:mi>
                                    </mml:mrow>
                                  </mml:msub>
                                  <mml:mo>=</mml:mo>
                                  <mml:msub>
                                    <mml:mrow>
                                      <mml:mi>g</mml:mi>
                                    </mml:mrow>
                                    <mml:mrow>
                                      <mml:mi>j</mml:mi>
                                      <mml:mo>â</mml:mo>
