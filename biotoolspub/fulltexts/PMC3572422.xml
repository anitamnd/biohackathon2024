                  <mml:mi>L</mml:mi>
                  <mml:mo>)</mml:mo>
                  <mml:msup>
                    <mml:mrow>
                      <mml:mi>t</mml:mi>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mi>L</mml:mi>
                      <mml:mo>+</mml:mo>
