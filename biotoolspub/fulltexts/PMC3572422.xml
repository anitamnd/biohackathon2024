                          </mml:mrow>
                          <mml:mrow>
                            <mml:mi>i</mml:mi>
                            <mml:mo>,</mml:mo>
                            <mml:mi>j</mml:mi>
                            <mml:mo>â</mml:mo>
                            <mml:mn>1</mml:mn>
                          </mml:mrow>
                        </mml:msub>
                        <mml:mo>+</mml:mo>
                        <mml:mfenced open="{">
                          <mml:mrow>
                            <mml:mtable>
                              <mml:mtr>
                                <mml:mtd>
                                  <mml:msub>
                                    <mml:mrow>
                                      <mml:mi mathvariant="script">D</mml:mi>
