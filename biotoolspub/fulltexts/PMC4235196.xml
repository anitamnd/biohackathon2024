                  </mml:mrow>
                </mml:msub>
                <mml:mfenced close=")" open="(">
                  <mml:mi mathvariant="italic">start</mml:mi>
                </mml:mfenced>
                <mml:mo>+</mml:mo>
                <mml:msub>
                  <mml:mrow>
                    <mml:mi mathvariant="italic">g</mml:mi>
                  </mml:mrow>
