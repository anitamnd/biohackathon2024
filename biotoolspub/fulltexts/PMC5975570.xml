              </mml:munderover>
              <mml:munderover>
                <mml:mo>∑</mml:mo>
                <mml:mrow>
                  <mml:msub>
                    <mml:mi>y</mml:mi>
                    <mml:mn>1</mml:mn>
                  </mml:msub>
                  <mml:mo>=</mml:mo>
                  <mml:mn>0</mml:mn>
                </mml:mrow>
                <mml:mo>∞</mml:mo>
              </mml:munderover>
              <mml:mi>f</mml:mi>
              <mml:mfenced close=")" open="(" separators=",">
                <mml:msub>
                  <mml:mtext mathvariant="italic">nωρμ</mml:mtext>
                  <mml:mi>g</mml:mi>
                </mml:msub>
                <mml:mfrac>
                  <mml:msub>
                    <mml:mi mathvariant="normal">φ</mml:mi>
                    <mml:mi>g</mml:mi>
                  </mml:msub>
                  <mml:mi mathvariant="normal">n</mml:mi>
                </mml:mfrac>
              </mml:mfenced>
              <mml:mi>f</mml:mi>
              <mml:mfenced close=")" open="(" separators=",">
                <mml:msub>
                  <mml:mi mathvariant="italic">nμ</mml:mi>
                  <mml:mi mathvariant="normal">g</mml:mi>
                </mml:msub>
                <mml:mfrac>
                  <mml:msub>
                    <mml:mi mathvariant="normal">φ</mml:mi>
                    <mml:mi>g</mml:mi>
                  </mml:msub>
                  <mml:mi mathvariant="normal">n</mml:mi>
                </mml:mfrac>
              </mml:mfenced>
              <mml:mi>I</mml:mi>
              <mml:mfenced close=")" open="(">
                <mml:mrow>
                  <mml:mi mathvariant="normal">p</mml:mi>
                  <mml:mfenced close=")" open="(" separators=",">
                    <mml:msub>
                      <mml:mi>y</mml:mi>
                      <mml:mn>1</mml:mn>
