        </caption>
        <graphic xlink:href="mBio.03284-19-f0002"/>
      </fig>
      <supplementary-material content-type="local-data" id="figS1">
        <object-id pub-id-type="doi">10.1128/mBio.03284-19.2</object-id>
        <label>FIG S1</label>
