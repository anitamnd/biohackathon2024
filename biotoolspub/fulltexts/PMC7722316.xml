                <mml:mo>â</mml:mo>
                <mml:mi mathvariant="italic">CDF</mml:mi>
                <mml:mfenced close=")" open="(">
                  <mml:mrow>
                    <mml:msub>
                      <mml:mi>y</mml:mi>
                      <mml:mi>i</mml:mi>
                    </mml:msub>
                    <mml:mo>â</mml:mo>
                    <mml:mn>1</mml:mn>
