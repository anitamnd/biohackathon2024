      <list-item>
        <p><bold>index</bold>.true=dat<bold>$index</bold></p>
      </list-item>
      <list-item>
        <p>beta0=<bold>rep</bold>(0.1,1+<bold>q</bold>+p+p*<bold>q</bold>)</p>
      </list-item>
      <list-item>
        <p>lambda1=0.45</p>
      </list-item>
      <list-item>
        <p>lambda2=1</p>
      </list-item>
      <list-item>
        <p><bold>beta</bold>.est = interep(e, g, y,beta0,corre="e",pmethod="mixed",</p>
      </list-item>
      <list-item>
        <p>lam1=lambda1,lam2=lambda2,maxits=30)</p>
      </list-item>
      <list-item>
        <p><bold>beta</bold>.est[<bold>abs</bold>(<bold>beta</bold>.est)&lt;0.05]=0</p>
      </list-item>
