          <styled-content style="color:#2A9A57;font-size:15px;background-color:#cccccc">get</styled-content>
          <styled-content style="font-size:15px;background-color:#cccccc"> = </styled-content>
          <styled-content style="color:#936EB8;font-size:15px;background-color:#cccccc">"family"</styled-content>
          <styled-content style="font-size:15px;background-color:#cccccc">٫</styled-content>
          <styled-content style="color:#2A9A57;font-size:15px;background-color:#cccccc">         db</styled-content>
