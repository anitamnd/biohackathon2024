                <mml:mi>i</mml:mi>
              </mml:mrow>
            </mml:msub>
          </mml:mrow>
          <mml:mo>=</mml:mo>
          <mml:mi mathvariant="normal">NES</mml:mi>
          <mml:mo>=</mml:mo>
          <mml:mrow>
            <mml:mfrac bevelled="true">
              <mml:mrow>
                <mml:mi mathvariant="normal">ES</mml:mi>
              </mml:mrow>
              <mml:mrow>
                <mml:mi mathvariant="normal">mean</mml:mi>
                <mml:mo>(</mml:mo>
                <mml:mrow>
                  <mml:msub>
                    <mml:mrow>
                      <mml:mi mathvariant="normal">ES</mml:mi>
                    </mml:mrow>
