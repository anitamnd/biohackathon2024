              <mml:mi>D</mml:mi>
              <mml:mo>,</mml:mo>
              <mml:mi>M</mml:mi>
              <mml:mo>,</mml:mo>
              <mml:mi mathvariant="bold-italic">Ï</mml:mi>
              <mml:mo stretchy="false">)</mml:mo>
              <mml:mo>=</mml:mo>
              <mml:mrow>
                <mml:mfrac>
