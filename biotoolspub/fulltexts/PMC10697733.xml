                  <mml:mo>)</mml:mo>
                  <mml:mo>â</mml:mo>
                  <mml:mtext>log</mml:mtext>
                  <mml:mo>â</mml:mo>
                  <mml:mi>P</mml:mi>
                  <mml:mo>(</mml:mo>
                  <mml:mi>D</mml:mi>
                  <mml:mo>,</mml:mo>
                  <mml:mi mathvariant="bold-italic">n</mml:mi>
                  <mml:mo>|</mml:mo>
                  <mml:mi>M</mml:mi>
                  <mml:mo>,</mml:mo>
                  <mml:mo>Ï</mml:mo>
