                      </mml:mrow>
                    </mml:msub>
                  </mml:mrow>
                  <mml:mo>,</mml:mo>
                  <mml:mi mathvariant="bold-italic">Ï</mml:mi>
                  <mml:mo stretchy="false">)</mml:mo>
                  <mml:mo>=</mml:mo>
                  <mml:mi>P</mml:mi>
                  <mml:mo stretchy="false">(</mml:mo>
                  <mml:mi mathvariant="bold-italic">m</mml:mi>
                  <mml:mo stretchy="false">)</mml:mo>
                  <mml:mrow>
                    <mml:mo>(</mml:mo>
                    <mml:mrow>
                      <mml:mrow>
                        <mml:munderover>
                          <mml:mo>â</mml:mo>
                          <mml:mrow>
                            <mml:mi>j</mml:mi>
                            <mml:mo>=</mml:mo>
                            <mml:mrow>
                              <mml:msub>
                                <mml:mrow>
                                  <mml:mi>n</mml:mi>
                                </mml:mrow>
                                <mml:mi>i</mml:mi>
                              </mml:msub>
                            </mml:mrow>
                            <mml:mo>+</mml:mo>
