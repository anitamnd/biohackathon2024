                <mml:mrow>
                  <mml:msup>
                    <mml:mrow>
                      <mml:mrow>
                        <mml:mo>[</mml:mo>
                        <mml:mrow>
                          <mml:mrow>
                            <mml:munderover>
                              <mml:mo>â</mml:mo>
                              <mml:mrow>
                                <mml:mi>i</mml:mi>
