                </mml:mtd>
              </mml:mtr>
              <mml:mtr>
                <mml:mtd>
                  <mml:mo>=</mml:mo>
                  <mml:mi>E</mml:mi>
                  <mml:mo>[</mml:mo>
                  <mml:mtext>log</mml:mtext>
                  <mml:mo>â</mml:mo>
                  <mml:mi>P</mml:mi>
                  <mml:mo>(</mml:mo>
                  <mml:mi>D</mml:mi>
