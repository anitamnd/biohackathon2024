                            <mml:msup>
                              <mml:mrow>
                                <mml:mrow>
                                  <mml:mo stretchy="true">(</mml:mo>
                                  <mml:mrow>
                                    <mml:msub>
                                      <mml:mrow>
                                        <mml:mo>Î»</mml:mo>
                                      </mml:mrow>
                                      <mml:mi>i</mml:mi>
                                    </mml:msub>
                                  </mml:mrow>
                                  <mml:mo>â</mml:mo>
                                  <mml:mrow>
                                    <mml:msub>
                                      <mml:mrow>
                                        <mml:mo>Î»</mml:mo>
                                      </mml:mrow>
                                      <mml:mrow>
