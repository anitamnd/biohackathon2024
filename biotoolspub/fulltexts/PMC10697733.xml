                                    </mml:mrow>
                                  </mml:msubsup>
                                </mml:mrow>
                                <mml:mo stretchy="false">)</mml:mo>
                                <mml:mo>â¯</mml:mo>
                                <mml:mo stretchy="false">(</mml:mo>
                                <mml:mrow>
                                  <mml:msubsup>
                                    <mml:mrow>
                                      <mml:mi>m</mml:mi>
                                    </mml:mrow>
                                    <mml:mi>K</mml:mi>
                                    <mml:mrow>
