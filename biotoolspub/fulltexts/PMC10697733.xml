                  <mml:mo>=</mml:mo>
                  <mml:mrow>
                    <mml:munder>
                      <mml:mo>â</mml:mo>
                      <mml:mi mathvariant="bold-italic">n</mml:mi>
                    </mml:munder>
                  </mml:mrow>
                  <mml:mi>P</mml:mi>
                  <mml:mo>(</mml:mo>
                  <mml:mi mathvariant="bold-italic">n</mml:mi>
                  <mml:mo>|</mml:mo>
                  <mml:mi>D</mml:mi>
