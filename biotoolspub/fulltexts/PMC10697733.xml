                                    <mml:mi>K</mml:mi>
                                    <mml:mrow>
                                      <mml:mtext>min</mml:mtext>
                                    </mml:mrow>
                                  </mml:msubsup>
                                </mml:mrow>
                                <mml:mo stretchy="false">)</mml:mo>
                              </mml:mrow>
                            </mml:mfrac>
                          </mml:mrow>
                        </mml:mrow>
                      </mml:mtd>
                      <mml:mtd>
                        <mml:mrow>
                          <mml:mtext>for</mml:mtext>
                          <mml:mo>â</mml:mo>
                          <mml:mrow>
                            <mml:msub>
                              <mml:mrow>
                                <mml:mi>m</mml:mi>
                              </mml:mrow>
                              <mml:mi>i</mml:mi>
                            </mml:msub>
                          </mml:mrow>
                          <mml:mo>â</mml:mo>
                          <mml:mo stretchy="false">[</mml:mo>
                          <mml:mrow>
                            <mml:msubsup>
