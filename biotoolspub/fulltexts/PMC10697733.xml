                    </mml:msub>
                  </mml:mrow>
                  <mml:mo stretchy="false">]</mml:mo>
                  <mml:mo>=</mml:mo>
                  <mml:mrow>
                    <mml:munder>
                      <mml:mo>â</mml:mo>
                      <mml:mi mathvariant="bold-italic">n</mml:mi>
                    </mml:munder>
                  </mml:mrow>
                  <mml:mrow>
                    <mml:mrow>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mi>n</mml:mi>
                        </mml:mrow>
                        <mml:mi>i</mml:mi>
