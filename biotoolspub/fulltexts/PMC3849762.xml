                    <mml:mrow/>
                  </mml:mfenced>
                </mml:mstyle>
                <mml:msup>
                  <mml:mrow>
                    <mml:mo>(</mml:mo>
                    <mml:mn>1</mml:mn>
                    <mml:mo>−</mml:mo>
                    <mml:mi>c</mml:mi>
                    <mml:mo>)</mml:mo>
                  </mml:mrow>
                  <mml:mrow>
                    <mml:mi>a</mml:mi>
                  </mml:mrow>
                </mml:msup>
                <mml:mo>−</mml:mo>
                <mml:msup>
                  <mml:mrow>
                    <mml:mo>(</mml:mo>
                    <mml:mn>1</mml:mn>
                    <mml:mo>−</mml:mo>
                    <mml:mtext mathvariant="italic">cy</mml:mtext>
                    <mml:mo>)</mml:mo>
