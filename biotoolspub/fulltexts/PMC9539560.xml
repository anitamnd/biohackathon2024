              <mml:mpadded width="+3.3pt">
                <mml:mi>D</mml:mi>
              </mml:mpadded>
            </mml:mrow>
            <mml:mo rspace="5.8pt">=</mml:mo>
            <mml:mrow>
              <mml:mrow>
