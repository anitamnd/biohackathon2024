                  <mml:mi>x</mml:mi>
                  <mml:mo stretchy="false">)</mml:mo>
                  <mml:mo>×</mml:mo>
                  <mml:msup>
                    <mml:mi>P</mml:mi>
                    <mml:mo>∗</mml:mo>
                  </mml:msup>
                  <mml:mo stretchy="false">(</mml:mo>
                  <mml:mi>f</mml:mi>
                  <mml:mo stretchy="false">(</mml:mo>
                  <mml:mi>x</mml:mi>
                  <mml:mo stretchy="false">)</mml:mo>
