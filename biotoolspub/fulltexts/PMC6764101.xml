                <italic>Echinochloa crus-galli</italic>
              </td>
              <td align="left" rowspan="1" colspan="1">−−/(2<italic>n</italic> = 6<italic>x</italic> = 54)</td>
              <td align="left" rowspan="1" colspan="1">1.40Gb/1.27Gb</td>
              <td align="left" rowspan="1" colspan="1">108 771</td>
              <td align="left" rowspan="1" colspan="1">STB08</td>
              <td align="left" rowspan="1" colspan="1">(<xref rid="ref7" ref-type="bibr">7</xref>)</td>
            </tr>
