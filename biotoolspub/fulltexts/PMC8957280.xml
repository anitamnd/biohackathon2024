                            <mml:mi>N</mml:mi>
                            <mml:mo>â</mml:mo>
                            <mml:mstyle mathvariant="bold" mathsize="normal">
                              <mml:mn>1</mml:mn>
                            </mml:mstyle>
                          </mml:mrow>
                        </mml:munderover>
                        <mml:mo stretchy="false">(</mml:mo>
                      </mml:mstyle>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mtext>IBI</mml:mtext>
                        </mml:mrow>
                        <mml:mi>i</mml:mi>
                      </mml:msub>
