                      </mml:msup>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mstyle mathvariant="bold" mathsize="normal">
                        <mml:mi>N</mml:mi>
                      </mml:mstyle>
                      <mml:mo>â</mml:mo>
