                    <mml:mrow>
                      <mml:mi>e</mml:mi>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mo>-</mml:mo>
                      <mml:mo stretchy="false">(</mml:mo>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mi>λ</mml:mi>
                        </mml:mrow>
                        <mml:mrow>
                          <mml:mtext>[+]</mml:mtext>
                        </mml:mrow>
                      </mml:msub>
                      <mml:mo>+</mml:mo>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mi>λ</mml:mi>
                        </mml:mrow>
                        <mml:mrow>
                          <mml:mtext>[–]</mml:mtext>
                        </mml:mrow>
                      </mml:msub>
