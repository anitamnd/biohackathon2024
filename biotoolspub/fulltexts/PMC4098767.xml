                    <mml:mrow>
                      <mml:mi>λ</mml:mi>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mtext>[+]</mml:mtext>
                    </mml:mrow>
                  </mml:msub>
                  <mml:mo>,</mml:mo>
                  <mml:msub>
                    <mml:mrow>
                      <mml:mi>λ</mml:mi>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mtext>[–]</mml:mtext>
                    </mml:mrow>
                  </mml:msub>
                  <mml:mo stretchy="false">)</mml:mo>
                  <mml:mo>=</mml:mo>
                  <mml:munderover accentunder="false" accent="false">
                    <mml:mrow>
                      <mml:mi mathsize="big">∑</mml:mi>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mi>d</mml:mi>
                      <mml:mo>=</mml:mo>
