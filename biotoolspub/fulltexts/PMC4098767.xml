                      <mml:mi>k</mml:mi>
                      <mml:mo stretchy="false">|</mml:mo>
                    </mml:mrow>
                  </mml:msub>
                  <mml:mo stretchy="false">(</mml:mo>
                  <mml:mn>2</mml:mn>
                  <mml:msqrt>
                    <mml:mrow>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mi>λ</mml:mi>
                        </mml:mrow>
                        <mml:mrow>
                          <mml:mtext>[+]</mml:mtext>
                        </mml:mrow>
                      </mml:msub>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mi>λ</mml:mi>
                        </mml:mrow>
                        <mml:mrow>
                          <mml:mtext>[–]</mml:mtext>
                        </mml:mrow>
