                        </mml:mrow>
                        <mml:mo>^</mml:mo>
                      </mml:mover>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mi>i</mml:mi>
                    </mml:mrow>
                  </mml:msub>
                  <mml:mo>=</mml:mo>
                  <mml:mfenced open="{">
                    <mml:mrow>
                      <mml:mtable columnalign="left">
                        <mml:mtr>
                          <mml:mtd>
