      <p>
        <disp-formula id="bmcM4">
          <label>(4)</label>
          <mml:math id="M5" name="1471-2105-15-89-i5" overflow="scroll">
            <mml:mtable class="align" columnalign="left">
              <mml:mtr>
                <mml:mtd class="align-1">
