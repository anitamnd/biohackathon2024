            <mml:mi>t</mml:mi>
            <mml:mi>i</mml:mi>
            <mml:mi>o</mml:mi>
            <mml:mi>n</mml:mi>
            <mml:mtext> </mml:mtext>
            <mml:mi>f</mml:mi>
            <mml:mi>r</mml:mi>
            <mml:mi>e</mml:mi>
            <mml:mi>q</mml:mi>
            <mml:mi>u</mml:mi>
            <mml:mi>e</mml:mi>
            <mml:mi>n</mml:mi>
            <mml:mi>c</mml:mi>
            <mml:mi>y</mml:mi>
            <mml:mo>=</mml:mo>
            <mml:mfrac>
              <mml:mrow>
                <mml:msub>
                  <mml:mi>N</mml:mi>
                  <mml:mrow>
                    <mml:mi>c</mml:mi>
                    <mml:mi>l</mml:mi>
                    <mml:mi>r</mml:mi>
                  </mml:mrow>
                </mml:msub>
              </mml:mrow>
              <mml:mrow>
                <mml:msub>
                  <mml:mi>N</mml:mi>
                  <mml:mrow>
                    <mml:mi>c</mml:mi>
                    <mml:mi>l</mml:mi>
                    <mml:mi>r</mml:mi>
                  </mml:mrow>
                </mml:msub>
                <mml:mo>+</mml:mo>
                <mml:msub>
                  <mml:mi>N</mml:mi>
                  <mml:mrow>
                    <mml:mi>s</mml:mi>
                    <mml:mi>p</mml:mi>
