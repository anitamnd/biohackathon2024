            <tr>
              <td align="left" rowspan="1" colspan="1">Triterpene enzymes</td>
              <td align="left" rowspan="1" colspan="1">271</td>
            </tr>
            <tr>
              <td align="left" rowspan="1" colspan="1">Enzymatic reactions</td>
              <td align="left" rowspan="1" colspan="1">716</td>
            </tr>
            <tr>
              <td align="left" rowspan="1" colspan="1">Substrates</td>
