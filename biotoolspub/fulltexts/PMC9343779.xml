              <mml:mn>0</mml:mn>
            </mml:mrow>
            <mml:mrow>
              <mml:mi>n</mml:mi>
              <mml:mo>−</mml:mo>
              <mml:mn>1</mml:mn>
            </mml:mrow>
          </mml:munderover>
          <mml:mfenced open="(" close=")">
            <mml:mrow>
              <mml:mfrac>
                <mml:mrow>
                  <mml:mi>f</mml:mi>
                  <mml:mfenced open="(" close=")">
                    <mml:msub>
                      <mml:mi>t</mml:mi>
                      <mml:mi>i</mml:mi>
                    </mml:msub>
                  </mml:mfenced>
                  <mml:mo>+</mml:mo>
                  <mml:mi>f</mml:mi>
                  <mml:mfenced open="(" close=")">
                    <mml:msub>
                      <mml:mi>t</mml:mi>
