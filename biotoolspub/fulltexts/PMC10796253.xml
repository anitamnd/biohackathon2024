\usepackage{wasysym}
\usepackage{amsfonts}
\usepackage{amssymb}
\usepackage{amsbsy}
\usepackage{upgreek}
\usepackage{mathrsfs}
\setlength{\oddsidemargin}{-69pt}
\begin{document}
\begin{eqnarray*} \sum_{i=1}^j (X_{loci_i} - X_{peak})^2 * \frac{X_{counts_i}} {\sum_{i=1}^j (X_{counts_i})} \end{eqnarray*}\end{document}</tex-math>
      </disp-formula>
    </sec>
