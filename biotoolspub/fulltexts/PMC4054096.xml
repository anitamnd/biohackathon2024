                          <mml:mi>μ</mml:mi>
                        </mml:mrow>
                      </mml:mfenced>
                      <mml:mn>2</mml:mn>
                    </mml:msup>
                    <mml:mrow>
                      <mml:mn>2</mml:mn>
                      <mml:msup>
                        <mml:mi>σ</mml:mi>
