                <mml:mspace width="0.5em"/>
                <mml:mo>×</mml:mo>
                <mml:mspace width="0.5em"/>
                <mml:msup>
                  <mml:mi>e</mml:mi>
                  <mml:mfrac>
                    <mml:msup>
                      <mml:mfenced open="(" close=")">
                        <mml:msubsup>
                          <mml:mi>M</mml:mi>
                          <mml:mi>i</mml:mi>
                          <mml:mfenced open="(" close=")">
                            <mml:mi>j</mml:mi>
