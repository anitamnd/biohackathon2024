                    <mml:mo>,</mml:mo>
                    <mml:mi>μ</mml:mi>
                    <mml:mo>,</mml:mo>
                    <mml:mi>p</mml:mi>
                  </mml:mrow>
                </mml:mfenced>
                <mml:mo>=</mml:mo>
                <mml:mi>p</mml:mi>
                <mml:mspace width="0.5em"/>
                <mml:mo>×</mml:mo>
                <mml:mspace width="0.1em"/>
                <mml:mfrac>
                  <mml:mn>1</mml:mn>
                  <mml:mrow>
                    <mml:msqrt>
                      <mml:mrow>
                        <mml:mn>2</mml:mn>
                        <mml:mi>π</mml:mi>
