                        <mml:mrow>
                          <mml:msubsup>
                            <mml:mi>M</mml:mi>
                            <mml:mi>i</mml:mi>
                            <mml:mfenced open="(" close=")">
                              <mml:mi>j</mml:mi>
                            </mml:mfenced>
