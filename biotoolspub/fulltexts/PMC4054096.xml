                <mml:mo>×</mml:mo>
                <mml:mspace width="0.1em"/>
                <mml:mfrac>
                  <mml:mn>1</mml:mn>
                  <mml:mrow>
                    <mml:msqrt>
                      <mml:mrow>
                        <mml:mn>2</mml:mn>
