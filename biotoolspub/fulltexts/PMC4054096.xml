                    </mml:mfrac>
                    <mml:mo>×</mml:mo>
                    <mml:msup>
                      <mml:mi>e</mml:mi>
                      <mml:mfrac>
                        <mml:msup>
                          <mml:mfenced open="(" close=")">
                            <mml:mrow>
                              <mml:msubsup>
                                <mml:mi>M</mml:mi>
                                <mml:mi>i</mml:mi>
                                <mml:mfenced open="(" close=")">
