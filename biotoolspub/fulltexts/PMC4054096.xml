                    <mml:mi>j</mml:mi>
                  </mml:mrow>
                </mml:munder>
                <mml:mfenced open="(">
                  <mml:mrow>
                    <mml:mi mathvariant="normal">p</mml:mi>
                    <mml:mo>×</mml:mo>
                    <mml:mfrac>
                      <mml:mn>1</mml:mn>
                      <mml:mrow>
                        <mml:msqrt>
                          <mml:mrow>
                            <mml:mn>2</mml:mn>
                            <mml:mi>π</mml:mi>
                          </mml:mrow>
                        </mml:msqrt>
                        <mml:mover accent="true">
                          <mml:mi>σ</mml:mi>
                          <mml:mo stretchy="true">^</mml:mo>
