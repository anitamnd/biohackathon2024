          <tr>
            <td align="left">Mutation type</td>
            <td align="center">HGMD public version</td>
            <td align="center">HGMD professional (subscription version)</td>
          </tr>
          <tr>
            <td colspan="3">
              <hr/>
            </td>
          </tr>
          <tr>
            <td align="left">Single base-pair substitutions</td>
            <td/>
            <td/>
