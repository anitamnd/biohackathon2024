\usepackage{wasysym}
\usepackage{amsfonts}
\usepackage{amssymb}
\usepackage{amsbsy}
\usepackage{upgreek}
\usepackage{mathrsfs}
\setlength{\oddsidemargin}{-69pt}
\begin{document}
}{}$$\begin{equation*} P(t_x\text{:}t_y) = \left\lbrace \begin{array}{@{}l@{\quad }l@{}}2P(t_x)P(t_y),&amp; \text{if}\ t_x\text{:}t_y\ \text{is observed and}\ t_x \ne t_y \\ P(t_x)P(t_y),&amp; \text{if}\ t_x\text{:}t_y\ \text{is observed and}\ t_x = t_y\\ 0,&amp; \text{otherwise} \end{array}\right. \end{equation*}$$\end{document}</tex-math></disp-formula>where<disp-formula id="M2"><label>(2)</label><tex-math id="M8">\documentclass[12pt]{minimal}
