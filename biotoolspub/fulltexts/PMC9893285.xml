            <mml:mi>t</mml:mi>
            <mml:mi>y</mml:mi>
            <mml:mo>=</mml:mo>
            <mml:mo> </mml:mo>
            <mml:mfrac>
              <mml:mrow>
                <mml:msub>
                  <mml:mi>T</mml:mi>
                  <mml:mi>P</mml:mi>
                </mml:msub>
              </mml:mrow>
              <mml:mrow>
