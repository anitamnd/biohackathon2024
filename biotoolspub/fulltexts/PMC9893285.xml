                      <mml:mi>P</mml:mi>
                    </mml:msub>
                    <mml:mo>*</mml:mo>
                    <mml:msub>
                      <mml:mi>T</mml:mi>
                      <mml:mi>N</mml:mi>
                    </mml:msub>
