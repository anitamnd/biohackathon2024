              </mml:mfrac>
              <mml:mo>,</mml:mo>
              <mml:mrow>
                <mml:mi>S</mml:mi>
                <mml:mi>p</mml:mi>
                <mml:mi>e</mml:mi>
                <mml:mi>c</mml:mi>
                <mml:mi>i</mml:mi>
                <mml:mi>f</mml:mi>
                <mml:mi>i</mml:mi>
                <mml:mi>c</mml:mi>
                <mml:mi>i</mml:mi>
