            <tr>
              <td rowspan="1" colspan="1">
                <monospace>resp</monospace>
              </td>
              <td rowspan="1" colspan="1">Character string</td>
              <td rowspan="1" colspan="1">Name of the response variable</td>
              <td rowspan="1" colspan="1"/>
