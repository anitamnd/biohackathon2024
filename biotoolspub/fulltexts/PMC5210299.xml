<sub><italic>m</italic>,<italic>n</italic></sub>=1 and <italic>B</italic>
<sub><italic>m</italic>,<italic>n</italic></sub>=3 recombination events and <inline-formula id="IEq3"><alternatives><tex-math id="M7">\documentclass[12pt]{minimal}
				\usepackage{amsmath}
				\usepackage{wasysym} 
				\usepackage{amsfonts} 
				\usepackage{amssymb} 
				\usepackage{amsbsy}
