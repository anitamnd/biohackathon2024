                        <mml:mtext class="textsf" mathvariant="sans-serif">X</mml:mtext>
                      </mml:mstyle>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mn>33</mml:mn>
                    </mml:mrow>
                  </mml:msub>
                  <mml:mo class="MathClass-bin">-</mml:mo>
                  <mml:msub>
                    <mml:mrow>
                      <mml:mstyle class="text">
