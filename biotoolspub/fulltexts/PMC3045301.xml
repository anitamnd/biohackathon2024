              <mml:mi>ln</mml:mi>
              <mml:mi>Ï</mml:mi>
              <mml:mo>+</mml:mo>
              <mml:msub>
                <mml:mi>x</mml:mi>
                <mml:mn>1</mml:mn>
              </mml:msub>
              <mml:mi>ln</mml:mi>
              <mml:mfrac>
                <mml:mrow>
                  <mml:msub>
                    <mml:mi>t</mml:mi>
                    <mml:mn>1</mml:mn>
                  </mml:msub>
                </mml:mrow>
                <mml:mrow>
                  <mml:msub>
                    <mml:mi>t</mml:mi>
                    <mml:mn>0</mml:mn>
                  </mml:msub>
                </mml:mrow>
              </mml:mfrac>
              <mml:mo>â</mml:mo>
              <mml:mi>ln</mml:mi>
              <mml:mo stretchy="false">[</mml:mo>
              <mml:msub>
                <mml:mi>x</mml:mi>
